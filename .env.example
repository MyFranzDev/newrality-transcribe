# API Configuration
API_KEY=vff_dev_reportbabel_demo
ALLOWED_API_KEYS=vff_dev_reportbabel_demo,another_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=INFO

# Whisper Model Configuration
WHISPER_MODEL=small
WHISPER_DEVICE=auto  # auto, cuda, cpu
WHISPER_COMPUTE_TYPE=int8  # int8, float16, float32

# Transcription Settings
DEFAULT_LANGUAGE=it
DEFAULT_TEMPERATURE=0.0
DEFAULT_BEAM_SIZE=5

# File Upload Limits
MAX_FILE_SIZE_MB=25
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg,flac,webm

# Performance
ENABLE_VAD_FILTER=true  # Voice Activity Detection for better accuracy
